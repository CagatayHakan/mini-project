    {% for detail in orderdetail %}

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ detail.name }}</td>
        </tr>
        <tr>
            <th>Order Id</th>
            <td>{{ detail.orderid }}</td>
        </tr>
        <tr>
            <th>User Id</th>
            <td>{{ detail.userid }}</td>
        </tr>
        <tr>
            <th>Product Id</th>
            <td>{{ detail.productid }}</td>
        </tr>
        <tr>
            <th>Price</th>
            <td>{{ detail.price }}</td>
        </tr>
        <tr>
            <th>Quantity</th>
            <td>{{ detail.quantity }}</td>
        </tr>
        <tr>
            <th>Amount</th>
            <td>{{ detail.amount }}</td>
        </tr>
        <tr>
            <th>Status</th>
            <td>{{ detail.status }}</td>
        </tr>
        </tbody>
    </table>
        <hr/>
